<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmer_layout_homepage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.465">

        <ImageView
            android:id="@+id/cart_proceed_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="#ccc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/linearLayout" />

        <TextView
            android:id="@+id/layout_despensa_numero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="#ccc"
            android:fontFamily="@font/gilroy_medium"
            android:text="#ccc"
            android:textColor="#ccc"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/cart_proceed_btn"
            app:layout_constraintEnd_toStartOf="@+id/cart_proceed_btn"
            app:layout_constraintTop_toTopOf="@+id/cart_proceed_btn" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#ccc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/layout_despensa_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="#ccc"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/layout_despensa_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.488">

            <TextView
                android:id="@+id/cart_despensa_title"
                android:layout_width="111dp"
                android:layout_height="match_parent"
                android:background="#ccc"
                android:fontFamily="@font/gilroy_semibold"
                android:text="Red Applles"
                android:textColor="#ccc" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.facebook.shimmer.ShimmerFrameLayout>